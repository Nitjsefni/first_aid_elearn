= form_for @exam do |f|
  - if @exam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam.errors.count, "error")} prohibited this exam from being saved:"
      %ul
        - @exam.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :level
    = f.text_field :level
  .field
    = f.label :question1
    = f.text_area :question1
  .field
    = f.label :question2
    = f.text_area :question2
  .field
    = f.label :question3
    = f.text_area :question3
  .field
    = f.label :question4
    = f.text_area :question4
  .field
    = f.label :question5
    = f.text_area :question5
  .field
    = f.label :question6
    = f.text_area :question6
  .field
    = f.label :question7
    = f.text_area :question7
  .field
    = f.label :question8
    = f.text_area :question8
  .field
    = f.label :question9
    = f.text_area :question9
  .field
    = f.label :question10
    = f.text_area :question10
  .field
    = f.label :points
    = f.number_field :points
  .actions
    = f.submit 'Save'
